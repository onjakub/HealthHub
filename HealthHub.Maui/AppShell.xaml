<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HealthHub.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HealthHub.Maui.Views">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Patients"
        ContentTemplate="{DataTemplate views:PatientsPage}"
        Route="PatientsPage" />

    <ShellContent
        Title="Add Patient"
        ContentTemplate="{DataTemplate views:AddPatientPage}"
        Route="AddPatientPage" />

    <ShellContent
        Title="Patient Details"
        ContentTemplate="{DataTemplate views:PatientDetailPage}"
        Route="PatientDetailPage" />

</Shell>